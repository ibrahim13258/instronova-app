 # Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper'), __FILE__)

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Additional pods for Instanova features - updated to latest versions
  pod 'Firebase/CoreOnly', '10.22.0'
  pod 'Firebase/Auth', '10.22.0'
  pod 'Firebase/Firestore', '10.22.0'
  pod 'Firebase/Storage', '10.22.0'
  pod 'Firebase/Messaging', '10.22.0'
  pod 'Firebase/Analytics', '10.22.0'
  pod 'SDWebImage', '~> 5.18.0'
  pod 'GoogleSignIn', '7.0.0'
  pod 'FBSDKLoginKit', '~> 16.2.0'
  pod 'FBSDKCoreKit', '~> 16.2.0'
  pod 'IQKeyboardManagerSwift', '6.5.0'
  pod 'SVProgressHUD', '2.2.5'
  
  # Additional recommended pods for social media app
  pod 'ImagePicker', '~> 3.0'
  pod 'Cache', '~> 6.0'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Additional build settings
    target.build_configurations.each do |config|
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['SWIFT_VERSION'] = '5.7'
      config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      
      # Enable new build system and arm64
      config.build_settings['ARCHS[sdk=iphonesimulator*]'] = 'arm64 x86_64'
      
      # Fix for Xcode 15+ compatibility
      config.build_settings['DEAD_CODE_STRIPPING'] = 'YES'
      config.build_settings['GCC_OPTIMIZATION_LEVEL'] = 's'
    end
  end
  
  # Fix for Firebase and Flutter compatibility
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386'
  end
end
