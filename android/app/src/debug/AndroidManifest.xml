<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.instanova.app.debug">

    <!-- Extra debug permissions -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name=".DebugApplication"
        android:label="@string/app_name_debug"
        android:debuggable="true"
        android:usesCleartextTraffic="true">

        <!-- Firebase Debug Config -->
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />
        <meta-data
            android:name="firebase_analytics_collection_deactivated"
            android:value="true" />

        <!-- Flipper / Stetho / LeakCanary Integration -->
        <meta-data
            android:name="com.instanova.debug.FLIPPER_ENABLED"
            android:value="true" />
        <meta-data
            android:name="com.instanova.debug.STETHO_ENABLED"
            android:value="true" />
        <meta-data
            android:name="com.instanova.debug.LEAKCANARY_ENABLED"
            android:value="true" />

        <!-- Debug Environment Switch -->
        <meta-data
            android:name="com.instanova.debug.API_ENV"
            android:value="staging" />

        <!-- Debug Deep Links -->
        <activity
            android:name=".DebugDeepLinkActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="instanova-debug" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="instaphoto-dev" />
            </intent-filter>
        </activity>

        <!-- Mock Push Receiver (for QA) -->
        <receiver
            android:name=".debug.MockPushReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.instanova.DEBUG_PUSH" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
